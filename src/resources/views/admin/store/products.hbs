<div class="store-prd row">
    {{> dashboard}}
    <div class="col-xl-10">
        <h3 class="store-prd-title">SẢN PHẨM TRÊN TRANG</h3>
        <button class="back-trash-btn btn btn-outline-danger">
            <i class="fas fa-trash-alt"></i>
            Thùng rác
        </button>
        <div class="prd-action-selection flex-align-c">
            <select class="select-tag" name="" id="" required>
                <option value= "">--Hành động--</option>
                <option value= "slide">Xóa</option>
                <option value= "slide">Chọn tất cả</option>
            </select>
            <button class="prd-st-action-btn btn btn-success">Submit</button>
        </div>
        <div class="store-prd-list">
            <table class="table">
                <thead class="table-success">
                    <tr>
                        <th scope="col">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            Check all
                        </th>
                        <th scope="col">ID</th>
                        <th scope="col">Product name</th>
                        <th scope="col">Created at</th>
                        <th scope="col">Update</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                {{#each products}}
                <tbody>
                    <tr>
                        <th scope="row">
                            <input class="form-check-input" type="checkbox" value="{{this._id}}" id="flexCheckDefault">
                        </th>
                        <td>{{this._id}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.createdAt}}</td>
                        <td>Sửa</td>
                        <td>Xóa</td>
                    </tr>
                </tbody>
                {{/each}}
            </table>
        </div>
    </div>
</div> 